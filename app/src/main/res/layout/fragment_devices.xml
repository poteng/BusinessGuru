<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.businessguru.businessguru.MainActivity$DevicesFragment">


    <TextView
        android:id="@+id/textViewGPS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toRightOf="@+id/imageViewBulb1"
        android:paddingLeft="10dp"
        android:text="Status:"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/textViewGPS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewGPS2"
        android:layout_alignStart="@+id/textViewGPS2"
        android:layout_alignTop="@+id/imageViewAC1"
        android:paddingLeft="10dp"
        android:text="Status:"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/textViewGPS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewGPS1"
        android:layout_alignStart="@+id/textViewGPS1"
        android:layout_alignTop="@+id/imageViewLock1"
        android:paddingLeft="10dp"
        android:text="Status:"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="121dp" />

    <ImageView
        android:id="@+id/imageViewLock1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorDeviceBG"
        android:elevation="8dp"
        android:src="@drawable/ic_sync_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewAC1"
        app:layout_constraintLeft_toRightOf="@+id/textViewLock1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageViewBulb1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewLight1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="35dp"
        android:text="@string/light"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewLock1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewAC1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorDeviceBG"
        android:elevation="8dp"
        android:src="@drawable/ic_sync_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="274dp"
        android:layout_alignTop="@+id/textViewAC1"
        android:layout_alignLeft="@+id/imageViewLock1"
        android:layout_alignStart="@+id/imageViewLock1" />

    <TextView
        android:id="@+id/textViewLock1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="35dp"
        android:text="@string/lock"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewAC1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignTop="@+id/imageViewLock1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewBulb1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorDeviceBG"
        android:elevation="8dp"
        android:src="@drawable/ic_sync_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewLock1"
        app:layout_constraintLeft_toRightOf="@+id/textViewLight1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageViewLock1"
        android:layout_alignStart="@+id/imageViewLock1" />

    <TextView
        android:id="@+id/textViewAC1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="35dp"
        android:text="@string/ac"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageViewAC1"
        tools:layout_editor_absoluteY="263dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textViewLock1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
